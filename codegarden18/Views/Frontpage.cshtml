@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Frontpage>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "SiteMaster.cshtml";
    var img = Model.Content.LogoImage;

}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="countDown">
                @{
                    var targetDate = Convert.ToDateTime("6/12/2018");
                    var today = DateTime.Now;
                    var daysToTarget = (targetDate - today).Days;
                    @String.Format("Only {1} days remain until Codegarden 18!",
                    today.ToShortDateString()
                    , daysToTarget
                   , targetDate.ToShortDateString())

                }       

                
              
            </div>

            <div class="frontpageIdentity">

                @{
                    
                    <img src="@img.Url" />
                }
                

            </div>

            

        </div>

            


    </div>

</div>



<div class="container">
    <div class="row ">
       <div class="frontpageBlock1"> 

            <div class="firstboxcontent top-buffer">
                   <h4> @Umbraco.Field("headline")</h4>
            </div>
        
        
    </div>
        <div class="frontpageBlock1">

            
            <div class="firstboxcontent">
                <p> @Umbraco.Field("bodyText") </p>
            </div>

        </div>
</div>
</div>



<div class="container">
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
</div>




<div class="container">
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12 buttom-buffer">

            <div class="buttonsDiv mt-2">
                <a class="button-red" href="~/Views/Feed.cshtml"> Feed </a>
            </div>
            <div class="buttonsDiv">
                <a class="button-orange"  href="~/Views/Speakers.cshtml"> Speakers </a>
            </div>
            <div class="buttonsDiv">
                <a class="button-green" href="~/Views/Schedule.cshtml"> Schedule </a>
            </div>
           
            

        </div>


    </div>
</div>

