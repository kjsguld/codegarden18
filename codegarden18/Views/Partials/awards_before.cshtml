@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    var categories = Model.Content.Site().Descendants<Category>();
}

<div class="awardsTopBorder"></div>
<div class="_awardsbefore">
    <div class="box">
        <div class="content">
            <h1>@Umbraco.Field("Headline")</h1>
            @Umbraco.Field("Bodytext")
        </div>
        
        <div class="row">
            @foreach (var category in categories)
            {
                <div class="col-md-4">
                    <h4><strong>@category.Headline</strong></h4>
                    @category.Bodytext
                </div>
            }
        </div>
        
        <hr />
        
        <div>
            <h5><strong>@Umbraco.Field("headlineRules")</strong></h5>
            @Umbraco.Field("bodytextRules")
            <br />
            <h5><strong>@Umbraco.Field("headlineSubmit")</strong></h5>
            @Umbraco.Field("bodytextSubmit")
        </div>
    </div>
</div>